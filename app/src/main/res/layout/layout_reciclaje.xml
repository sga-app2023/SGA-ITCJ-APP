<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".OpcionesMenuAlumno">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/hintText"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_tapas_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text=""
                android:inputType="number"
                android:textColor="@color/black"
                android:hint="Tapas recolectadas" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/hintText"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_botellas_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Botellas recolectadas"
                android:text=""
                android:inputType="number"
                android:background="@color/white"
                android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/hintText"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_botes_alum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="number"
                android:hint="Botes de aluminio"
                android:background="@color/white"
                android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/black"
            app:hintTextAppearance="@style/hintText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_fecha_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Seleccionar fecha:"
                android:background="@color/white"
                android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_reciclaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:padding="15dp"
            android:textAllCaps="false"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:backgroundTint="@color/red_600" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>